{
    "files.exclude": {
        "**/.git": true,
        "**/.svn": true,
        "**/.hg": true,
        "**/CVS": true,
        "**/.DS_Store": true,
        "**/Thumbs.db": true,
        "node_modules": true,
    },
    "editor.defaultFormatter": "rvest.vs-code-prettier-eslint",
    "prettier.configPath": ".eslintrc.js",
    "[typescript]": {
        "editor.defaultFormatter": "rvest.vs-code-prettier-eslint"
    },
    "cSpell.words": [
        "nestjs",
        "ormconfig",
        "tailwindcss",
        "typeorm"
    ],
    "editor.formatOnSave": true,
    "[postcss]": {
        "editor.defaultFormatter": "esbenp.prettier-vscode"
    }
}